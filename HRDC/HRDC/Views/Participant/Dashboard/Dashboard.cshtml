@{
    ViewData["Title"] = "Participant Dashboard";
    Layout = "~/Views/Shared/_LayoutParticipant.cshtml"; // participant layout file
}

<style>
    .dashboard-tile {
        background: #e2e8f0;
        border-radius: 20px;
        padding: 30px 20px;
        text-align: center;
        font-size: 1.2rem;
        font-weight: 600;
        color: #1e293b;
        transition: 0.3s;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        height: 150px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

        .dashboard-tile:hover {
            background: #cbd5e1;
            transform: translateY(-5px);
            cursor: pointer;
        }

    .dashboard-icon {
        font-size: 2rem;
        margin-bottom: 10px;
        color: #1d4ed8;
    }
</style>

<div class="container my-5">
    <div class="card shadow-lg p-4">
        <h2 class="mb-4 text-center text-primary">Participant Dashboard</h2>

        <div class="row text-center justify-content-center">

            <div class="col-6 col-md-3 mb-4">
                <a asp-controller="Participant" asp-action="MySessions">
                    <div class="dashboard-tile">
                        <i class="fas fa-calendar-check dashboard-icon"></i>
                        My Sessions
                    </div>
                </a>
            </div>

            <div class="col-6 col-md-3 mb-4">
                <a asp-controller="Participant" asp-action="TrainingDetails">
                    <div class="dashboard-tile">
                        <i class="fas fa-calendar-plus dashboard-icon"></i>
                        Upcoming Sessions
                    </div>
                </a>
            </div>

            <div class="col-6 col-md-3 mb-4">
                <a asp-controller="Participant" asp-action="ViewCertificate">
                    <div class="dashboard-tile">
                        <i class="fas fa-certificate dashboard-icon"></i>
                        View Certificate
                    </div>
                </a>
            </div>

            <div class="col-6 col-md-3 mb-4">
                <a asp-controller="Participant" asp-action="TrainingFeedback">
                    <div class="dashboard-tile">
                        <i class="fas fa-comment-dots dashboard-icon"></i>
                        Feedback
                    </div>
                </a>
            </div>

        </div>
    </div>
</div>
