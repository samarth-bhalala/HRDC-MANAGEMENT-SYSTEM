@model HRDC.Models.ProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(to right, #e3f2fd, #f8f9fa);
        font-family: 'Segoe UI', sans-serif;
    }

    .profile-card {
        max-width: 600px;
        margin: 60px auto;
        padding: 35px 30px;
        border-radius: 20px;
        background: #ffffff;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.6s ease-in-out;
    }

        .profile-card h2 {
            text-align: center;
            color: #0d6efd;
            margin-bottom: 30px;
        }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .btn-primary {
        width: 100%;
        font-weight: bold;
        letter-spacing: 0.5px;
    }

    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="profile-card">
    <h2>My Profile</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    <form asp-action="Profile" method="post" novalidate>
        <div class="mb-3">
            <label class="form-label" for="ID">ID</label>
            <input asp-for="ID" class="form-control" placeholder="Enter ID" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="FullName">Full Name</label>
            <input asp-for="FullName" class="form-control" placeholder="Enter your name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="Designation">Designation</label>
            <input asp-for="Designation" class="form-control" placeholder="Enter designation" />
            <span asp-validation-for="Designation" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="Institute">Institute</label>
            <input asp-for="Institute" class="form-control" placeholder="Enter institute" />
            <span asp-validation-for="Institute" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="Department">Department</label>
            <input asp-for="Department" class="form-control" placeholder="Enter department" />
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" for="Email">Email</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label" for="AlternateEmail">Alternate Email</label>
            <input asp-for="AlternateEmail" class="form-control" placeholder="Enter alternate email" />
            <span asp-validation-for="AlternateEmail" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update Profile</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
