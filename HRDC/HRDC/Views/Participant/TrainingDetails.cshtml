@model HRDC.Models.TrainingDetailsViewModel

@{
    ViewData["Title"] = "Training Event Details";
}

<style>
    .details-container {
        max-width: 800px;
        margin: 30px auto;
        padding: 20px;
        border: 1px solid #ccc;
        background-color: #f9f9f9;
        border-radius: 8px;
    }

        .details-container h2 {
            text-align: center;
        }

    .details-table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .details-table td {
            padding: 8px;
            vertical-align: top;
        }

    .input-area {
        width: 100%;
        height: 80px;
        padding: 8px;
        font-size: 14px;
        border-radius: 5px;
        border: 1px solid #ccc;
        resize: vertical;
    }

    .btn-group {
        text-align: center;
        margin-top: 30px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        margin: 10px;
        cursor: pointer;
        border-radius: 5px;
        border: none;
    }

    .btn-yes {
        background-color: #28a745;
        color: white;
    }

    .btn-no {
        background-color: #dc3545;
        color: white;
    }
</style>

<div class="details-container">
    <h2>@Model.Title</h2>
    <table class="details-table">
        <tr>
            <td><strong>Trainer:</strong></td>
            <td>@Model.Trainer</td>
        </tr>
        <tr>
            <td><strong>Date:</strong></td>
            <td>@Model.DateRange</td>
        </tr>
        <tr>
            <td><strong>Time:</strong></td>
            <td>@Model.Time</td>
        </tr>
        <tr>
            <td><strong>Venue:</strong></td>
            <td>@Model.Venue</td>
        </tr>
        <tr>
            <td><strong>Description:</strong></td>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <td><strong>What are your expectations to attend this program?</strong></td>
            <td>
                <form asp-action="TrainingDetails" method="post">
                    <textarea asp-for="Expectations" class="input-area" placeholder="Share your expectations..."></textarea>
                    <div class="btn-group">
                        <button type="submit" name="submitButton" value="Yes" class="btn btn-yes">Yes</button>
                        <button type="submit" name="submitButton" value="No" class="btn btn-no">No</button>
                    </div>
                </form>
            </td>
        </tr>
    </table>
</div>
