@model IEnumerable<HRDC.Models.SessionViewModel>

@{
    ViewData["Title"] = "Upcoming Sessions";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-primary mb-4">Upcoming Sessions</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Session Title</th>
                    <th>Author</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Mode</th>
                    <th>Share</th>
                    <th>Apply</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var session in Model)
                {
                    <tr>
                        <td>@session.SessionName</td>
                        <td>@session.AuthorName</td>
                        <td>@session.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@session.EndDate.ToString("yyyy-MM-dd")</td>
                        <td>@session.SessionType</td>
                        <td>
                            <a class="btn btn-success btn-sm me-1" target="_blank"
                               href="https://wa.me/?text=@("Check this session: " + session.SessionName)">
                                <i class="fab fa-whatsapp"></i>
                            </a>
                            <a class="btn btn-secondary btn-sm"
                               href="mailto:?subject=Session Info&body=@("Check this session: " + session.SessionName)">
                                <i class="fas fa-envelope"></i>
                            </a>
                        </td>
                        <td>
                            <form method="post" asp-action="Apply" asp-controller="Participant">
                                <input type="hidden" name="sessionId" value="@session.SessionID" />
                                <button type="submit" class="btn btn-primary btn-sm">Apply</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
