@model IEnumerable<HRDC.Models.CertificateViewModel>

@{
    ViewData["Title"] = "My Certificates";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="card shadow-lg p-4">
    <h2 class="text-primary mb-4">My Certificates</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <fieldset class="border p-3 mb-4">
        <legend class="float-none w-auto px-3">Your Completed Trainings</legend>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Training Name</th>
                    <th>Date</th>
                    <th>Certificate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cert in Model)
                {
                    <tr>
                        <td>@cert.TrainingName</td>
                        <td>@cert.Date.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-action="DownloadCertificate" asp-route-filePath="@cert.CertificatePath"
                               class="btn btn-success btn-sm">View / Download</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </fieldset>
</div>
