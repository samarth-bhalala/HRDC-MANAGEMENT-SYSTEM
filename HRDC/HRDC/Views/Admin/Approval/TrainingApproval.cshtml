@model List<HRDC.Models.Participant>
@{
    ViewData["Title"] = "Training Approval";
    var trainings = ViewBag.Trainings as List<HRDC.Models.Training>;
}

<style>
    .approval-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .approval-table th, .approval-table td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }

        .approval-table th {
            background-color: #007bff;
            color: white;
        }

    .approve-btn {
        background-color: green;
        color: white;
        padding: 5px 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .approve-all-btn {
        background-color: #1d4ed8;
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        margin-bottom: 15px;
    }

    .filter-section {
        margin-bottom: 20px;
    }
</style>

<h2>Participant Approval Panel</h2>

<!-- Filter section -->
<div class="filter-section">
    <label>Select Training:</label>
    <select>
        <option>-- Select --</option>
        @foreach (var t in trainings)
        {
            <option>@t.Title</option>
        }
    </select>
</div>

<!-- Approve All Button -->
<form asp-action="ApproveAll" method="post">
    <button type="submit" class="approve-all-btn">Approve All</button>
</form>

<!-- Participant List Table -->
<table class="approval-table">
    <thead>
        <tr>
            <th>Participant Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Email</td>
                <td>@p.Department</td>
                <td>@p.Status</td>
                <td>
                    <form asp-action="ApproveParticipant" method="post" style="display:inline;">
                        <input type="hidden" name="email" value="@p.Email" />
                        <button type="submit" class="approve-btn" @(p.Status == "Approved" ? "disabled" : "")>
                            Approve
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["Message"] != null)
{
    <p style="color: green; font-weight: bold;">@TempData["Message"]</p>
}
