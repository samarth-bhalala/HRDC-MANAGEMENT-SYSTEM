@model HRDC.Models.CertificateViewModel

<div class="card shadow-lg p-4">
    <h2 class="text-primary mb-4">Generate Certificates</h2>

    <form asp-action="LoadParticipants" method="post">
        <fieldset class="border p-3 mb-4">
            <legend class="float-none w-auto px-3">Select Training</legend>
            <div class="row mb-3">
                <div class="col-md-6">
                    <select asp-for="SelectedTraining" class="form-select">
                        <option value="">-- Select Training --</option>
                        @foreach (var t in Model.Trainings)
                        {
                            <option value="@t">@t</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Load Eligible Participants</button>
                </div>
            </div>
        </fieldset>
    </form>

    @if (Model.Participants != null && Model.Participants.Any())
    {
        <fieldset class="border p-3 mb-4">
            <legend class="float-none w-auto px-3">Eligible Participants</legend>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Employee ID</th>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Participants)
                    {
                        <tr>
                            <td>@p.EmployeeId</td>
                            <td>@p.Name</td>
                            <td>
                                <form asp-action="CreateCertificate" method="post" class="d-inline">
                                    <input type="hidden" name="employeeId" value="@p.EmployeeId" />
                                    <input type="hidden" name="name" value="@p.Name" />
                                    <input type="hidden" name="training" value="@Model.SelectedTraining" />
                                    <button type="submit" class="btn btn-success btn-sm">Generate Certificate</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </fieldset>
    }

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <p class="fw-bold text-success">@Model.StatusMessage</p>
    }
</div>

