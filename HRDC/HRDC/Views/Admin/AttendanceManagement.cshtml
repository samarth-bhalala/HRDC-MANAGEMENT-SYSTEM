@model AttendanceViewModel

@{
    ViewData["Title"] = "Attendance Management";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-primary mb-4">Attendance Management</h2>

        <form asp-action="AttendanceManagement" method="post">
            <fieldset class="border p-3 mb-4">
                <legend class="float-none w-auto px-3">Select Training Session</legend>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <select asp-for="SelectedTrainingSessionId" asp-items="Model.TrainingSessions" class="form-select"></select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" name="action" value="load" class="btn btn-primary">Load Employees</button>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <input asp-for="SearchTerm" class="form-control" placeholder="Search by employee name..." />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" name="action" value="search" class="btn btn-info">Search</button>
                    </div>
                </div>
            </fieldset>

            <fieldset class="border p-3 mb-4">
                <legend class="float-none w-auto px-3">Employee Attendance</legend>

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Employee ID</th>
                            <th>Employee Name</th>
                            <th>Present?</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Employees != null && Model.Employees.Count > 0)
                        {
                            for (int i = 0; i < Model.Employees.Count; i++)
                            {
                                <tr>
                                    <td>@Model.Employees[i].EmployeeId</td>
                                    <td>@Model.Employees[i].Name</td>
                                    <td>
                                        <input asp-for="@Model.Employees[i].IsPresent" type="checkbox" />
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">No employees loaded.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </fieldset>

            <div class="d-flex gap-2 mb-3">
                <button type="submit" name="action" value="save" class="btn btn-success">Save Attendance</button>
                <button type="submit" formaction="@Url.Action("ExportAttendanceToExcel", "Admin")" formmethod="post" class="btn btn-secondary">Export to Excel</button>
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">@ViewBag.Message</div>
            }
        </form>
    </div>
</div>
